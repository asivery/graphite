@top Program { statement* }
@skip { space }

statement { ExprStmt }

ExprStmt { Call }
Call { Identifier "(" Arguments? ")" }
Arguments { Argument ( "," Argument )* }
Argument { VertexCollection | Number | Vertex }

VertexCollection { "[" Vertex ( "," Vertex )* "]" }

@tokens {
  "("
  ")"
  "["
  "]"
  ","

  Identifier { @asciiLetter+ }
  Vertex { @asciiLetter+ }
  Number { @digit+ }

  space { @whitespace+ }
}
