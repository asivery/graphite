@top Program { statement* }
@skip { space | LineComment }

statement[@isGroup=Statement] { Vertex | Edge | WeightedEdge | DirectedEdge | WeightedDirectedEdge }

Vertex { Id Value }
Edge { Id "->" Id }
WeightedEdge { Id "[" Value "]->" Id }
DirectedEdge { Id "<->" Id }
WeightedDirectedEdge { Id "[" Value "]<->" Id }

@tokens {
  Id { @asciiLetter+ }
  Value { @digit+ }
  LineComment { "//" ![\n]* }

  space { @whitespace+ }
}